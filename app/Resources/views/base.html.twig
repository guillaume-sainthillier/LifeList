<!DOCTYPE html>
<html lang="{{ locale }}" ng-app="lifeListApp" ng-controller="MainCtrl">
    <head>
        <meta charset="UTF-8" />
        <title>LifeList - {% block title %}{% endblock %}</title>        

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- CSS -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css">        
    {% block stylesheets %}{% endblock %}        
    <!-- ./CSS -->        
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Life List</h1>
            <h2>Les choses à faire dans votre vie !</h2>
        </div>
        <!-- Alertes Globales -->
        <alert ng-repeat="alert in alerts.alerts" type="[[alert.type]]" close="alerts.closeAlert($index)" ng-cloak>[[ alert.msg ]]</alert>
        <!-- ./Alertes Globales -->
        <div id="pjax-container">{% block body %}{% endblock %}</div>
        <hr />
        <div class="text-center">Footer là</div>
    </div>
    <!-- JS -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-resource.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.11.0/ui-bootstrap-tpls.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.pjax/1.9.2/jquery.pjax.min.js"></script>        
    {% javascripts 
            'bundles/fosjsrouting/js/router.js'
            'js/fos_js_routes.js'
            'js/app.js'
            'js/controllers.js'
            'js/factory.js'
            'js/service.js'
            'js/directive.js'

            filter='?yui_js'
            output='prod/js/app.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% block javascripts %}{% endblock %}        
<!-- ./JS -->
</body>
</html>
